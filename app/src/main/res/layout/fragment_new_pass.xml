<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecoveryPass">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnInicioSesion2"
                android:background="@color/white"
                android:text="Cancelar"

                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-60dp"
                tools:layout_editor_absoluteY="667dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="258dp"
                android:layout_height="185dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="49dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/candado" />

            <TextView
                android:id="@+id/lblLain2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:text="Cambiar contraseña"
                android:textColor="#272727"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lblLain3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.736"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/inCorreo3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6"
                    app:srcCompat="@drawable/arroba" />

                <EditText
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:ems="10"
                    android:hint="Correo"
                    android:inputType="textWebEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#5B5B5B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgArroba3"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pass"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/inCorreo3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6"
                    app:srcCompat="@drawable/lock" />

                <EditText
                    android:id="@+id/inCorreo2"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:inputType="textWebEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#5B5B5B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgArroba3"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pass_2"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/inCorreo3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6"
                    app:srcCompat="@drawable/lock" />

                <EditText
                    android:id="@+id/inCorreo3"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:inputType="textWebEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#5B5B5B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgArroba3"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6" />

            </LinearLayout>

            <Button
                android:id="@+id/btnInicioSesion2"
                android:layout_width="298dp"
                android:layout_height="59dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/border_radius"
                android:text="Cambiar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>