<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecoveryPass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Cancelar"

                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="262dp"
                android:layout_height="151dp"
                android:layout_marginTop="63dp"
                app:srcCompat="@drawable/candado" />

            <TextView
                android:id="@+id/lblLain2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="20dp"
                android:clickable="false"
                android:text="Recupera tu contraseÃ±a"
                android:textColor="#272727"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblLain3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="38dp"
                android:clickable="false"
                android:text="Introduce tu correo electronico"
                android:textColor="#272727"
                android:textSize="20sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/inCorreo3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6"
                    app:srcCompat="@drawable/arroba" />

                <EditText
                    android:id="@+id/tiMail"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:ems="10"
                    android:hint="Correo"
                    android:inputType="textWebEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#5B5B5B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgArroba3"
                    app:layout_constraintTop_toBottomOf="@+id/lblLain6" />

            </LinearLayout>


            <Button
                android:id="@+id/btnRecovery"
                android:layout_width="298dp"
                android:layout_height="59dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_radius"
                android:text="Aceptar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>