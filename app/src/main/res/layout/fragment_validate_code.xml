<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecoveryPass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Cancelar"

                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="314dp"
                android:layout_height="225dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="49dp"
                app:srcCompat="@drawable/candado" />

            <TextView
                android:id="@+id/lblLain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="20dp"
                android:clickable="false"
                android:text="Recupera tu contrase침a"
                android:textColor="#272727"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblLain3"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:text="Ingresa el correo electronico con el que te registraste y te enviaremos un c칩digo para restablecer tu contrase침a."
                android:textColor="#272727"
                android:textSize="20sp"
                android:textStyle="normal"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/tiCode"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:hint="C칩digo"
                android:inputType="textWebEmailAddress"
                android:textColor="#000"
                android:textColorHint="#5B5B5B" />

            <Button
                android:id="@+id/btnRecovery"
                android:layout_width="298dp"
                android:layout_height="59dp"
                android:background="@drawable/border_radius"
                android:text="Aceptar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>